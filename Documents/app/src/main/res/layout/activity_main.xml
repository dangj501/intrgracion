<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#1E1E1E">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src=""
                android:layout_gravity="center_horizontal"
                android:contentDescription="Logo de la aplicación"
                android:layout_marginBottom="16dp" />


            <ImageButton
                android:id="@+id/btnMostrarFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:drawableTop=""
                android:src="@mipmap/ic_camara2"
                android:backgroundTint="#FF3D00"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bienvenido(a)"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:backgroundTint="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical" />

                <ImageButton
                    android:id="@+id/btnEditarCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/lapiz"
                    android:backgroundTint="#FF3D00"/>

            </LinearLayout>


            <TextView
                android:id="@+id/tvNombreCompleto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:text="Nombre completo: Daniel Garcia Jacome"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />


            <TextView
                android:id="@+id/tvCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:text="Correo electrónico: dangja9@gmail.com"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />


            <TextView
                android:id="@+id/tvTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teléfono: 2282157254"
                android:backgroundTint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />


            <TextView
                android:id="@+id/tvFechaNacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de nacimiento: 10/08/2003"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información del Gimnasio"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />


            <TextView
                android:id="@+id/tvFechaIncorporacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de inscripcion: 25/11/2024"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />


            <TextView
                android:id="@+id/tvEstatura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estatura: 172 cm"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />


            <TextView
                android:id="@+id/tvPeso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peso: 50 kg"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />


            <TextView
                android:id="@+id/tvEntrenadorAsignado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Entrenador asignado: Ricardo milos"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>